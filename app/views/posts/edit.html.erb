
<h1>Edit Post</h1>
<%= form_with(model: @post, local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, value: @post.title %>
  </div>
  <div>
    <%= form.label :content %>
    <%= form.text_area :content, value: @post.content %>
  </div>
  <div>
    <%= form.submit 'Update Post' %>
  </div>
<% end %>
