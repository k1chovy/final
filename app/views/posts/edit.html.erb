<h1 class="text-center mt-4">Edit Post</h1>
<div class="container mt-4">
  <%= form_with(model: @post, local: true, class: "shadow p-4 rounded bg-light") do |form| %>
    <div class="mb-3">
      <%= form.label :title, "Title", class: "form-label fw-bold" %>
      <%= form.text_field :title, value: @post.title, class: "form-control", placeholder: "Enter the post title" %>
    </div>
    <div class="mb-3">
      <%= form.label :content, "Content", class: "form-label fw-bold" %>
      <%= form.text_area :content, value: @post.content, class: "form-control", rows: 5, placeholder: "Write your content here..." %>
    </div>
    <div class="d-flex justify-content-between">
      <%= form.submit 'Update Post', class: "btn btn-primary px-4" %>
      <%= link_to 'Cancel', user_posts_path, class: "btn btn-secondary px-4" %>
    </div>
  <% end %>
</div>

<script>
  // Highlighting the input field on focus
  document.addEventListener("DOMContentLoaded", function() {
    const inputs = document.querySelectorAll("input, textarea");
    inputs.forEach(input => {
      input.addEventListener("focus", () => {
        input.classList.add("border-primary");
      });
      input.addEventListener("blur", () => {
        input.classList.remove("border-primary");
      });
    });
  });
</script>

<style>
  /* Custom styles for the form */
  .form-label {
    font-size: 1.1rem;
  }
  .form-control:focus {
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
  }
</style>
