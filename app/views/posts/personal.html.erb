<h1 class="text-center mt-4">Your Posts</h1>
<div class="container mt-4">
  <% if @user_posts.present? %>
    <div class="row">
      <% @user_posts.each do |post| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card shadow-sm">
            <% if post.image.attached? %>
              <%= image_tag post.image, class: "card-img-top img-fluid", style: "height: 200px; object-fit: cover;" %>
            <% else %>
              <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                <span class="text-white">No Image</span>
              </div>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= link_to post.title, post_path(post), class: "text-decoration-none text-dark" %></h5>
              <p class="card-text text-muted"><%= truncate(post.content, length: 100) %></p>
              <div class="d-flex justify-content-between">
                <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-warning btn-sm' %>
                <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info text-center">
      <p>No posts found.</p>
    </div>
  <% end %>
</div>

<style>
  /* Custom styles for the card */
  .card-title {
    font-size: 1.2rem;
    font-weight: bold;
  }
  .card-text {
    font-size: 0.9rem;
  }
  .btn-sm {
    font-size: 0.8rem;
  }
</style>
