<h1 class="text-center my-4">User Management</h1>

<div class="table-responsive">
  <table class="table table-hover table-bordered align-middle shadow-lg">
    <thead class="table-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Email</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each_with_index do |user, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= user.email %></td>
          <td>
            <div class="btn-group" role="group" aria-label="User Actions">
              <!-- Nút Edit -->
              <%= link_to edit_user_path(user), class: 'btn btn-sm btn-primary d-flex align-items-center gap-2 shadow' do %>
                <i class="bi bi-pencil-fill"></i> Edit
              <% end %>

              <!-- Nút Delete -->
              <%= button_to user_path(user), method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }, class: 'btn btn-sm btn-danger d-flex align-items-center gap-2 shadow' do %>
                <i class="bi bi-trash-fill"></i> Delete
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
