<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="container" style="max-width: 400px; margin-top: 100px;">
      <div class="card">
        <div class="card-header text-center">
          <h3>Quên mật khẩu</h3>
        </div>
        <div class="card-body">
          <form action="/reset_password" method="POST">
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="mb-3">
                <%= f.label :email, class:"form-label" %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Nhập email của bạn" %>
              </div>
              <div class="actions">
                <%= f.submit "Gửi hướng dẫn đặt lại mật khẩu", class:"btn btn-primary w-100" %>
              </div>
          </form>
          <div class="mt-3 text-center">
            <%= link_to "Đăng nhập", new_user_session_path, class:"text-decoration-none"%>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  